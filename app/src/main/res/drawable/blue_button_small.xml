<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false"><shape>
            <solid android:color="#9EA3A8" />

            <stroke android:width="1dp" android:color="#FFFFFF" />

            <corners android:bottomLeftRadius="10sp" android:bottomRightRadius="10sp" android:topLeftRadius="10sp" android:topRightRadius="10sp" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <solid android:color="#0178cd" />

            <stroke android:width="1dp" android:color="#013153" />

            <corners android:bottomLeftRadius="10sp" android:bottomRightRadius="10sp" android:topLeftRadius="10sp" android:topRightRadius="10sp" />
        </shape></item>
    <item><shape>
            <solid android:color="#013153" />

            <stroke android:width="1dp" android:color="#0178cd" />

            <corners android:bottomLeftRadius="10sp" android:bottomRightRadius="10sp" android:topLeftRadius="10sp" android:topRightRadius="10sp" />
        </shape></item>

</selector>