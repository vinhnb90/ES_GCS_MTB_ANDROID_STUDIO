<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false"><shape>
            <solid android:color="#9EA3A8" />

            <stroke android:width="3dp" android:color="#FFFFFF" />

            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <solid android:color="#0178cd" />

            <stroke android:width="3dp" android:color="#013153" />

            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape></item>
    <item><shape>
            <solid android:color="#013153" />

            <stroke android:width="3dp" android:color="#022137" />

            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape></item>

</selector>