<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_2sdp">

        <TextView
            android:id="@+id/text_wifi_ssid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SSID"
            android:textColor="@color/color_main"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_32sdp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="IP Adress:"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etIP"
            android:layout_width="0dp"
            android:layout_height="@dimen/_32sdp"
            android:layout_weight="2"
            android:background="@drawable/etxt_selector"
            android:enabled="false"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="192.168.2.1:80"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:gravity="center_vertical"
            android:layout_height="@dimen/_32sdp"
            android:textSize="@dimen/_14sdp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Command:"
            android:textStyle="bold" />

        <EditText
            android:gravity="center_vertical"
            android:layout_height="@dimen/_32sdp"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/etCommand"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@drawable/etxt_selector"
            android:enabled="false"
            android:paddingLeft="@dimen/_5sdp"
            android:text="\?action=stream" />
    </LinearLayout>

    <Button
        android:id="@+id/btnConnect_main"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_margin="5dp"
        android:background="@drawable/blue_button"
        android:text="Mở trình kết nối wifi"
        android:textColor="#FFF"
        android:textSize="@dimen/_12sdp" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_margin="5dp"
        android:background="@drawable/blue_button"
        android:text="Kết nối camera"
        android:textColor="#FFF"
        android:textSize="@dimen/_12sdp" />

</LinearLayout>