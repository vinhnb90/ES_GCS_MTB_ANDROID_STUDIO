<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvBluetoothState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="connect"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/etxt_MAC"
            style="@style/my_edittext"
            android:layout_width="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="3"
            android:background="@drawable/etxt_selector"
            android:text="" >
        </EditText>

        <Button
            android:id="@+id/btnPrintTest"
            style="@style/my_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue_button"
            android:text="In thử" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvDevicesFound"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" 
        android:background="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnScanDevice"
            style="@style/my_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue_button"
            android:text="Tìm máy in" />

        
    </LinearLayout>

</LinearLayout>