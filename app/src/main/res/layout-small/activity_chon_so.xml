<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:shadowColor="#afafaf"
            android:shadowDx="-2"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:text="@string/title_activity_chon_so"
            android:textColor="#055181"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#055181" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="3dp"
            android:background="#055181" />

        <RadioGroup
            android:id="@+id/rgCamera"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbAiBall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Gậy camera"
                android:textSize="@dimen/_12sdp" />

            <RadioButton
                android:textSize="@dimen/_12sdp"
                android:id="@+id/rbMTB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera MTB" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp" >

        <ListView
            android:id="@+id/lvChonSo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            android:listSelector="@android:color/darker_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_height="@dimen/_32sdp"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnGCS"
                style="@style/my_button_copy"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/blue_button"
                android:text="GCS chưa đối soát"
                android:textSize="@dimen/_12sdp" />
            
            <Button
                android:id="@+id/btnGCSAll"
                style="@style/my_button_copy"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/blue_button"
                android:text="GCS tất cả sổ"
                android:textSize="@dimen/_12sdp" />
            
        </LinearLayout>

        <Button
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="@dimen/_32sdp"
            android:id="@+id/btnQuanLySo"
            style="@style/my_button_copy"
            android:layout_width="fill_parent"
            android:background="@drawable/blue_button"
            android:text="Quản lý sổ"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

</LinearLayout>